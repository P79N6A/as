<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <FrameLayout
        android:id="@+id/flMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#efeeee"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbarCommon"
                layout="@layout/toolbar_common" />

            <ScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/window_background" />

                    <RelativeLayout
                        android:id="@+id/rlType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_text">

                        <TextView
                            android:id="@+id/tvTypeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="17.5dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="17.5dp"
                            android:text="应收/应付"
                            android:textColor="@color/black333"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvValueType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginStart="32dp"
                            android:layout_toEndOf="@+id/tvTypeTitle"
                            android:layout_toRightOf="@+id/tvTypeTitle"
                            android:gravity="end"
                            android:textColorHint="@color/black_hint_text"
                            android:textSize="14sp"
                            tools:value="值" />

                        <ImageView
                            android:id="@+id/imgType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/right_triangle" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/window_background" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/window_background" />

                    <RelativeLayout
                        android:id="@+id/rlAccounting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_text">

                        <TextView
                            android:id="@+id/tvAccountingTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="17.5dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="17.5dp"
                            android:text="核算对象"
                            android:textColor="@color/black333"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/imgXAccounting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/tvAccountingTitle"
                            android:layout_toRightOf="@+id/tvAccountingTitle"
                            android:src="@drawable/xinghao" />

                        <TextView
                            android:id="@+id/tvValueAccounting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginStart="32dp"
                            android:layout_toEndOf="@+id/tvAccountingTitle"
                            android:layout_toRightOf="@+id/tvAccountingTitle"
                            android:gravity="end"
                            android:textColorHint="@color/black_hint_text"
                            android:textSize="14sp"
                            tools:value="值" />

                        <ImageView
                            android:id="@+id/imgAccounting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/right_triangle" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:background="@color/window_background" />

                    <RelativeLayout
                        android:id="@+id/rlProject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_text">

                        <TextView
                            android:id="@+id/tvProjectTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="17.5dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="17.5dp"
                            android:text="费用项目"
                            android:textColor="@color/black333"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/imgXProject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/tvProjectTitle"
                            android:layout_toRightOf="@+id/tvProjectTitle"
                            android:src="@drawable/xinghao" />

                        <TextView
                            android:id="@+id/tvValueProject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginStart="32dp"
                            android:layout_toEndOf="@+id/tvProjectTitle"
                            android:layout_toRightOf="@+id/tvProjectTitle"
                            android:gravity="end"
                            android:textColorHint="@color/black_hint_text"
                            android:textSize="14sp"
                            tools:value="值" />

                        <ImageView
                            android:id="@+id/imgProject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/right_triangle" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:background="@color/window_background" />

                    <RelativeLayout
                        android:id="@+id/rlUnit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_text">

                        <TextView
                            android:id="@+id/tvUnitTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="17.5dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="17.5dp"
                            android:text="计量单位"
                            android:textColor="@color/black333"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvValueUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="32dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginStart="32dp"
                            android:layout_toEndOf="@+id/tvUnitTitle"
                            android:layout_toRightOf="@+id/tvUnitTitle"
                            android:gravity="end"
                            android:textColorHint="@color/black_hint_text"
                            android:textSize="14sp"
                            tools:value="值" />

                        <ImageView
                            android:id="@+id/imgUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/right_triangle" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:background="@color/window_background" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_text">

                        <TextView
                            android:id="@+id/tvNumberTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:paddingBottom="17.5dp"
                            android:paddingTop="17.5dp"
                            android:text="数量"
                            android:textColor="@color/black333"
                            android:textSize="16sp" />

                        <include
                            android:id="@+id/includeWidgetNumberTextView"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginStart="32dp"
                            layout="@layout/widget_number_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:background="@color/window_background" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_text">

                        <TextView
                            android:id="@+id/tvUnitPriceTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:paddingBottom="17.5dp"
                            android:paddingTop="17.5dp"
                            android:text="单价(元)"
                            android:textColor="@color/black333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/etUnitPriceValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tvUnitPriceTitle"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/tvUnitPriceTitle"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginStart="32dp"
                            android:layout_toEndOf="@+id/tvUnitPriceTitle"
                            android:layout_toRightOf="@+id/tvUnitPriceTitle"
                            android:background="@null"
                            android:gravity="end|center_vertical"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textColorHint="@color/black_hint_text"
                            android:textSize="14sp"
                            tools:hint="柜号" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="16dp"
                        android:background="@color/window_background" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_text">

                        <TextView
                            android:id="@+id/tvTotalAmountTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginStart="16dp"
                            android:paddingBottom="17.5dp"
                            android:paddingTop="17.5dp"
                            android:text="总金额(元)"
                            android:textColor="@color/black333"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/etTotalAmountValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tvTotalAmountTitle"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/tvTotalAmountTitle"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginStart="32dp"
                            android:layout_toEndOf="@+id/tvTotalAmountTitle"
                            android:layout_toRightOf="@+id/tvTotalAmountTitle"
                            android:background="@null"
                            android:gravity="end|center_vertical"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textColorHint="@color/black_hint_text"
                            android:textSize="14sp"
                            tools:hint="柜号" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/window_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnComit"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/background_shape_2_5_primary"
                            android:gravity="center"
                            android:text="确定"
                            android:textColor="@color/white"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </FrameLayout>

</layout>