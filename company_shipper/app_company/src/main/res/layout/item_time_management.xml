<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_shape_10_red"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="删除"
            android:textColor="@color/red_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/ProjectNameA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black333"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvDelete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvDelete"
            tools:text="方案名称A" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline1V50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.50" />

        <TextView
            android:id="@+id/tvOneDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/black_666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDelete"
            tools:text="周一" />

        <TextView
            
            android:id="@+id/tvOneDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/black_666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvOneDay"
            tools:text="00:00:00～23:59:59" />

        <TextView
            android:id="@+id/tvTwoDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/black_666666"
            app:layout_constraintStart_toStartOf="@+id/guideline1V50"
            app:layout_constraintTop_toBottomOf="@+id/tvDelete"
            tools:text="周二" />

        <TextView
            android:id="@+id/tvTwoDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/black_666666"
            app:layout_constraintStart_toStartOf="@+id/guideline1V50"
            app:layout_constraintTop_toBottomOf="@+id/tvTwoDay"
            tools:text="00:00:00～23:59:59" />

        <TextView
            
            android:id="@+id/tvThreeDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/black_666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvOneDate"
            tools:text="周三" />

        <TextView
            
            android:id="@+id/tvThreeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/black_666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvThreeDay"
            tools:text="00:00:00～23:59:59" />

        <TextView
            
            android:id="@+id/tvFourDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/black_666666"
            app:layout_constraintStart_toStartOf="@+id/guideline1V50"
            app:layout_constraintTop_toBottomOf="@+id/tvOneDate"
            tools:text="周四" />

        <TextView
            
            android:id="@+id/tvFourDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/black_666666"
            app:layout_constraintStart_toStartOf="@+id/guideline1V50"
            app:layout_constraintTop_toBottomOf="@+id/tvFourDay"
            tools:text="00:00:00～23:59:59" />

        <TextView
            
            android:id="@+id/tvFiveDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/black_666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvThreeDate"
            tools:text="周五" />

        <TextView
            
            android:id="@+id/tvFiveDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/black_666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFiveDay"
            tools:text="00:00:00～23:59:59" />

        <TextView
            
            android:id="@+id/tvSixDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/black_666666"
            app:layout_constraintStart_toStartOf="@+id/guideline1V50"
            app:layout_constraintTop_toBottomOf="@+id/tvThreeDate"
            tools:text="周六" />

        <TextView
            
            android:id="@+id/tvSixDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/black_666666"
            app:layout_constraintStart_toStartOf="@+id/guideline1V50"
            app:layout_constraintTop_toBottomOf="@+id/tvSixDay"
            tools:text="00:00:00～23:59:59" />

        <TextView
            android:id="@+id/tvSevenDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/black_666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvFiveDate"
            tools:text="周日" />

        <TextView
            android:id="@+id/tvSevenDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/black_666666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSevenDay"
            tools:text="00:00:00～23:59:59" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>