<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 拖车订单跟踪有个.9图片 -->

    <FrameLayout
        android:id="@+id/flMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/toolbarCommon"
                layout="@layout/toolbar_common" />

            <View
                android:id="@+id/vLoadingOrUnLoading"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/window_background" />

            <RelativeLayout
                android:id="@+id/rlLoadingOrUnLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_text">

                <TextView
                    android:id="@+id/tvLoadingOrUnLoadingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="17.5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="17.5dp"
                    android:textColor="@color/black333"
                    android:textSize="16sp"
                    android:text="装/拆箱" />

                <TextView
                    android:id="@+id/tvValueLoadingOrUnLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_toEndOf="@+id/tvLoadingOrUnLoadingTitle"
                    android:layout_toRightOf="@+id/tvLoadingOrUnLoadingTitle"
                    android:gravity="end"
                    android:textColorHint="@color/black_hint_text"
                    android:textSize="14sp"
                    tools:value="值" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/right_triangle" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/window_background" />

            <RelativeLayout
                android:id="@+id/rlNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_text">

                <TextView
                    android:id="@+id/tvNewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="17.5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="17.5dp"
                    android:textColor="@color/black333"
                    android:textSize="16sp"
                    android:text="无数据新建" />

                <TextView
                    android:id="@+id/tvValueNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_toEndOf="@+id/tvNewTitle"
                    android:layout_toRightOf="@+id/tvNewTitle"
                    android:gravity="end"
                    android:textColorHint="@color/black_hint_text"
                    android:textSize="14sp"
                    tools:value="值" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/right_triangle" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/window_background" />

            <TextView
                android:textColor="@color/black_666666"
                android:textSize="15sp"
                android:text="或使用以下模板新建"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/window_background" />

            <include
                android:id="@+id/layoutRecyclerview"
                layout="@layout/layout_recyclerview" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/window_background" />

        </LinearLayout>


    </FrameLayout>

</layout>