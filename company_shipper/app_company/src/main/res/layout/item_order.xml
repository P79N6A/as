<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvOrderID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorPrimary"
                android:textSize="16sp"
                tools:text="GZYG201705221020512" />

            <TextView
                android:id="@+id/tvOrderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvOrderID"
                android:layout_alignBottom="@+id/tvOrderID"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#999999"
                android:textSize="12sp"
                tools:text="2017-04-08 16:45制单" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TableLayout
                android:id="@+id/tlWait"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp"
                android:stretchColumns="*">

                <TableRow android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="托运人:"
                            android:textColor="#999999" />

                        <TextView
                            android:id="@+id/tvPeople"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="广汽集团" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="货名:"
                            android:textColor="#999999" />

                        <TextView
                            android:id="@+id/tvGoodsName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="陶瓷" />

                    </LinearLayout>

                </TableRow>

                <TableRow android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="起运地:"
                            android:textColor="#999999" />

                        <TextView
                            android:id="@+id/tvDeparture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="广汽集团" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="目的地:"
                            android:textColor="#999999" />

                        <TextView
                            android:id="@+id/tvDestination"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="陶瓷" />

                    </LinearLayout>


                </TableRow>

                <TableRow
                    android:id="@+id/tbPort"
                    android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="起运港:"
                            android:textColor="#999999" />

                        <TextView
                            android:id="@+id/tvPortShip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="广汽集团" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="目的港:"
                            android:textColor="#999999" />

                        <TextView
                            android:id="@+id/tvPortDestination"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="陶瓷" />

                    </LinearLayout>


                </TableRow>

                <TableRow android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="柜型柜量:"
                            android:textColor="#999999" />

                        <TextView
                            android:id="@+id/tvCabinetTypeVolume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="广汽集团" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="货主:"
                            android:textColor="#999999" />

                        <TextView
                            android:id="@+id/tvOwner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="陶瓷" />

                    </LinearLayout>


                </TableRow>

                <TableRow
                    android:id="@+id/tbBusinessType"
                    android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="业务类型:"
                            android:textColor="#999999" />

                        <TextView
                            android:id="@+id/tvBusinessType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="广汽集团" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="运单号:"
                            android:textColor="#999999" />

                        <TextView
                            android:id="@+id/tvMBLNO1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="123321" />

                    </LinearLayout>


                </TableRow>

                <TableRow
                    android:id="@+id/tbOperationClause"
                    android:paddingBottom="16dp">

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="操作条款:"
                            android:textColor="#999999" />

                        <TextView
                            android:id="@+id/tvOperationClause"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="广汽集团" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="运单号:"
                            android:textColor="#999999" />

                        <TextView
                            android:id="@+id/tvMBLNO2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="123321" />

                    </LinearLayout>

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>



