<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/vTop"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/blackccc"
        app:layout_constraintBottom_toTopOf="@+id/imgCicle"
        app:layout_constraintLeft_toLeftOf="@+id/imgCicle"
        app:layout_constraintRight_toRightOf="@+id/imgCicle"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgCicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_cicle_s"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitle" />

    <View
        android:id="@+id/vBottom"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/blackccc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/imgCicle"
        app:layout_constraintRight_toRightOf="@+id/imgCicle"
        app:layout_constraintTop_toBottomOf="@+id/imgCicle" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/imgCicle"
        android:layout_toRightOf="@+id/imgCicle"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imgCicle"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="装货办单" />

    <TextView
        android:id="@+id/tvValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/black_666666"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2018-05-08 15:16" />

    <View
        app:layout_constraintLeft_toLeftOf="@+id/tvTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/line_grey"
        android:layout_width="0dp"
        android:layout_height="1dp"/>

</android.support.constraint.ConstraintLayout>