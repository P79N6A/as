<layout>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/window_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/white_text">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_baoxian" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:text="保险信息"
            android:textSize="18sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:background="@color/line_grey" />

    <RelativeLayout
        android:id="@+id/rlIsInsurance"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white_text">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:text="是否保险"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tvIsInsurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:text="是"
            android:textColorHint="@color/black_hint_text"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/vIsInsurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/right_triangle" />

    </RelativeLayout>

    <View
        android:id="@+id/VLineInsurValue"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:background="@color/line_grey" />

    <RelativeLayout
        android:id="@+id/rlInsurValue"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white_text">

        <TextView
            android:id="@+id/tvInsurValueTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:text="货值（万）"
            android:textSize="16sp" />

        <!--<ImageView-->
            <!--android:id="@+id/imgXInsurValue"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginLeft="6dp"-->
            <!--android:layout_marginStart="6dp"-->
            <!--android:layout_toEndOf="@+id/tvInsurValueTitle"-->
            <!--android:layout_toRightOf="@+id/tvInsurValueTitle"-->
            <!--android:src="@drawable/xinghao" />-->

        <EditText
            android:id="@+id/etValueInsurValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/tvInsurValueTitle"
            android:layout_toRightOf="@+id/tvInsurValueTitle"
            android:background="@null"
            android:gravity="end"
            android:hint="请输入货值（万）"
            android:inputType="textMultiLine|number"
            android:scrollHorizontally="false"
            android:textColorHint="@color/black_hint_text"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:id="@+id/VLineInsurRate"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:background="@color/line_grey" />

    <RelativeLayout
        android:id="@+id/rlInsurRate"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white_text">

        <TextView
            android:id="@+id/tvInsurRateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:text="费率（万分）"
            android:textSize="16sp" />

        <!--<ImageView-->
        <!--android:id="@+id/imgXInsurRate"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginLeft="6dp"-->
        <!--android:layout_marginStart="6dp"-->
        <!--android:layout_toEndOf="@+id/tvInsurRateTitle"-->
        <!--android:layout_toRightOf="@+id/tvInsurRateTitle"-->
        <!--android:src="@drawable/xinghao" />-->

        <EditText
            android:id="@+id/etValueInsurRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/tvInsurRateTitle"
            android:layout_toRightOf="@+id/tvInsurRateTitle"
            android:background="@null"
            android:gravity="end"
            android:hint="请输入费率（万分）"
            android:inputType="textMultiLine|number"
            android:scrollHorizontally="false"
            android:textColorHint="@color/black_hint_text"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:id="@+id/VLineInsurMoney"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:background="@color/line_grey" />

    <RelativeLayout
        android:id="@+id/rlInsurMoney"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white_text">

        <TextView
            android:id="@+id/tvInsurMoneyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:text="保险费"
            android:textSize="16sp" />

        <!--<ImageView-->
        <!--android:id="@+id/imgXInsurMoney"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginLeft="6dp"-->
        <!--android:layout_marginStart="6dp"-->
        <!--android:layout_toEndOf="@+id/tvInsurMoneyTitle"-->
        <!--android:layout_toRightOf="@+id/tvInsurMoneyTitle"-->
        <!--android:src="@drawable/xinghao" />-->

        <EditText
            android:id="@+id/etValueInsurMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/tvInsurMoneyTitle"
            android:layout_toRightOf="@+id/tvInsurMoneyTitle"
            android:background="@null"
            android:gravity="end"
            android:hint="保险费"
            android:inputType="textMultiLine|number"
            android:scrollHorizontally="false"
            android:textColorHint="@color/black_hint_text"
            android:textSize="14sp" />

    </RelativeLayout>

</merge>
</layout>