<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/banner"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/side_interval"
        android:paddingRight="@dimen/side_interval"
        app:layout_collapseMode="pin"
        app:layout_scrollFlags="exitUntilCollapsed|enterAlways|enterAlwaysCollapsed">

        <TextView
            android:id="@+id/tvNewsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_xiaoxi"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_xiaoxi"
            android:text="最新消息"
            android:textColor="@color/black333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvLookAllOrderMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_ckqb_blue"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_ckqb_blue"
            android:gravity="end|center_vertical"
            android:text="查看全部"
            android:textColor="@color/black333"
            android:textSize="14sp" />

    </LinearLayout>

</layout>

