<?xml version="1.0" encoding="utf-8"?>
<com.yaoguang.lib.common.view.CustomInsetsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_sj_jzy"
        tools:visibility="gone" />

    <!-- 40 26 -->
    <FrameLayout
        android:id="@+id/flImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_sj_jzy" />

        <ImageView
            android:id="@+id/imgSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_tg_red" />

    </FrameLayout>


</com.yaoguang.lib.common.view.CustomInsetsFrameLayout>