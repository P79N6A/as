<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/tvLadingId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:drawableLeft="@drawable/ic_dh_10"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_dh_10"
                android:text="订单号"
                android:textSize="@dimen/order_detail_title_size" />

            <TextView
                android:id="@+id/tvLogBillTrack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/ic_juxing_huang9"
                android:paddingBottom="0dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="0dp"
                android:text="货柜跟踪"
                android:textColor="@color/primary"
                android:textSize="@dimen/order_detail_size" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/line_grey" />

        <RelativeLayout
            android:id="@+id/erlTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/tlTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="16dp"
                android:stretchColumns="*">

                <TableRow android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDepartureTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="起运地:"
                            android:textColor="#999999"
                            android:textSize="@dimen/order_detail_size" />

                        <TextView
                            android:id="@+id/tvDeparture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/table_value_padding_left"
                            android:paddingLeft="@dimen/table_value_padding_left"
                            android:paddingRight="@dimen/table_value_padding_left"
                            android:paddingStart="@dimen/table_value_padding_left"
                            android:textSize="@dimen/order_detail_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDestinationTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="目的地:"
                            android:textColor="#999999"
                            android:textSize="@dimen/order_detail_size" />

                        <TextView
                            android:id="@+id/tvDestination"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/table_value_padding_left"
                            android:paddingLeft="@dimen/table_value_padding_left"
                            android:paddingRight="@dimen/table_value_padding_left"
                            android:paddingStart="@dimen/table_value_padding_left"
                            android:textSize="@dimen/order_detail_size" />

                    </LinearLayout>


                </TableRow>

                <TableRow android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="物流公司:"
                            android:textColor="#999999"
                            android:textSize="@dimen/order_detail_size" />

                        <TextView
                            android:id="@+id/tvConsigneeId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/table_value_padding_left"
                            android:paddingLeft="@dimen/table_value_padding_left"
                            android:paddingRight="@dimen/table_value_padding_left"
                            android:paddingStart="@dimen/table_value_padding_left"
                            android:textSize="@dimen/order_detail_size"
                            tools:text="陶瓷" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="货主:"
                            android:textColor="#999999"
                            android:textSize="@dimen/order_detail_size" />

                        <TextView
                            android:id="@+id/tvEmployeeId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/table_value_padding_left"
                            android:paddingLeft="@dimen/table_value_padding_left"
                            android:paddingRight="@dimen/table_value_padding_left"
                            android:paddingStart="@dimen/table_value_padding_left"
                            android:textSize="@dimen/order_detail_size" />

                    </LinearLayout>


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="16dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="装卸箱:"
                            android:textColor="#999999"
                            android:textSize="@dimen/order_detail_size" />

                        <TextView
                            android:id="@+id/tvPrepaidCollect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/table_value_padding_left"
                            android:paddingLeft="@dimen/table_value_padding_left"
                            android:paddingRight="@dimen/table_value_padding_left"
                            android:paddingStart="@dimen/table_value_padding_left"
                            android:text=""
                            android:textSize="@dimen/order_detail_size" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="业务日期:"
                            android:textColor="#999999"
                            android:textSize="@dimen/order_detail_size" />

                        <TextView
                            android:id="@+id/tvModifyDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/table_value_padding_left"
                            android:paddingLeft="@dimen/table_value_padding_left"
                            android:paddingRight="@dimen/table_value_padding_left"
                            android:paddingStart="@dimen/table_value_padding_left"
                            android:textSize="@dimen/order_detail_size" />

                    </LinearLayout>


                </TableRow>

                <TableRow android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="货名:"
                            android:textColor="#999999"
                            android:textSize="@dimen/order_detail_size" />

                        <TextView
                            android:id="@+id/tvFreeStorage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/table_value_padding_left"
                            android:paddingLeft="@dimen/table_value_padding_left"
                            android:paddingRight="@dimen/table_value_padding_left"
                            android:paddingStart="@dimen/table_value_padding_left"
                            android:textSize="@dimen/order_detail_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="结算方式:"
                            android:textColor="#999999"
                            android:textSize="@dimen/order_detail_size" />

                        <TextView
                            android:id="@+id/tvServiceType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/table_value_padding_left"
                            android:paddingLeft="@dimen/table_value_padding_left"
                            android:paddingRight="@dimen/table_value_padding_left"
                            android:paddingStart="@dimen/table_value_padding_left"
                            android:textSize="@dimen/order_detail_size" />

                    </LinearLayout>
                </TableRow>

                <TableRow>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="委托单号:"
                            android:textColor="#999999"
                            android:textSize="@dimen/order_detail_size" />

                        <TextView
                            android:id="@+id/tvOperationClause"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/table_value_padding_left"
                            android:paddingLeft="@dimen/table_value_padding_left"
                            android:paddingRight="@dimen/table_value_padding_left"
                            android:paddingStart="@dimen/table_value_padding_left"
                            android:textSize="@dimen/order_detail_size" />

                    </LinearLayout>

                </TableRow>


            </TableLayout>

            <View
                android:id="@+id/vTop"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tlTop"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:background="@color/line_grey" />


            <TextView
                android:id="@+id/tvDetailCreated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/vTop"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:textColor="#999999"
                android:textSize="@dimen/order_detail_size"
                tools:text="2017-05-09 10:02 制单" />


        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>



