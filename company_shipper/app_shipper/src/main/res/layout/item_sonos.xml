<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_text"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlPlaceLoading"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/tvOrderSnTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:text="工作单号:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvOrderSn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tvOrderSnTitle"
                android:layout_toRightOf="@+id/tvOrderSnTitle"
                android:textColor="@color/primary"
                android:textSize="16sp"
                tools:text="GZ12222" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/line_grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/tlWait"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:stretchColumns="*">

                <TableRow android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="柜号:"
                            android:textColor="#999999"
                            android:textSize="@dimen/order_detail_size" />

                        <TextView
                            android:id="@+id/tvContNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/order_detail_size"
                            tools:text="广汽集团" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="业务时间:"
                            android:textColor="#999999"
                            android:textSize="@dimen/order_detail_size" />

                        <TextView
                            android:id="@+id/tvCreated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/order_detail_size"
                            tools:text="陶瓷" />

                    </LinearLayout>

                </TableRow>

                <TableRow>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="运单号:"
                            android:textColor="#999999"
                            android:textSize="@dimen/order_detail_size" />

                        <TextView
                            android:id="@+id/tvMBlno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/order_detail_size"
                            tools:text="广汽集团" />

                    </LinearLayout>

                </TableRow>

            </TableLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/line_grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <View
                android:id="@+id/vIsTruckPlanTime"
                android:layout_width="1dp"
                android:layout_height="21dp"
                android:layout_alignLeft="@+id/imgIsTruckPlanTime"
                android:layout_alignStart="@+id/imgIsTruckPlanTime"
                android:layout_below="@+id/imgIsTruckPlanTime"
                android:layout_marginBottom="-6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="-6dp"
                android:background="@color/line_grey" />

            <View
                android:id="@+id/vIsLoadOverDate"
                android:layout_width="1dp"
                android:layout_height="21dp"
                android:layout_alignLeft="@+id/imgIsLoadOverDate"
                android:layout_alignStart="@+id/imgIsLoadOverDate"
                android:layout_below="@+id/imgIsLoadOverDate"
                android:layout_marginBottom="-6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="-6dp"
                android:background="@color/line_grey" />

            <View
                android:id="@+id/vIsFirstEtd"
                android:layout_width="1dp"
                android:layout_height="21dp"
                android:layout_alignLeft="@+id/imgIsLoadOverDate"
                android:layout_alignStart="@+id/imgIsLoadOverDate"
                android:layout_below="@+id/imgIsFirstEtd"
                android:layout_marginBottom="-6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="-6dp"
                android:background="@color/line_grey" />

            <View
                android:id="@+id/vIsFirstEta"
                android:layout_width="1dp"
                android:layout_height="21dp"
                android:layout_alignLeft="@+id/imgIsFirstEta"
                android:layout_alignStart="@+id/imgIsFirstEta"
                android:layout_below="@+id/imgIsFirstEta"
                android:layout_marginBottom="-6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="-6dp"
                android:background="@color/line_grey" />

            <View
                android:id="@+id/vIsDestTruckPlanTime"
                android:layout_width="1dp"
                android:layout_height="21dp"
                android:layout_alignLeft="@+id/imgIsFirstEta"
                android:layout_alignStart="@+id/imgIsFirstEta"
                android:layout_below="@+id/imgIsDestTruckPlanTime"
                android:layout_marginBottom="-6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="-6dp"
                android:background="@color/line_grey" />


            <ImageView
                android:id="@+id/imgIsTruckPlanTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_huidian" />


            <ImageView
                android:id="@+id/imgIsLoadOverDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imgIsTruckPlanTime"
                android:layout_alignStart="@+id/imgIsTruckPlanTime"
                android:layout_below="@+id/vIsTruckPlanTime"
                android:src="@drawable/ic_huidian" />


            <ImageView
                android:id="@+id/imgIsFirstEtd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imgIsTruckPlanTime"
                android:layout_alignStart="@+id/imgIsTruckPlanTime"
                android:layout_below="@+id/vIsLoadOverDate"
                android:src="@drawable/ic_huidian" />


            <ImageView
                android:id="@+id/imgIsFirstEta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imgIsTruckPlanTime"
                android:layout_alignStart="@+id/imgIsTruckPlanTime"
                android:layout_below="@+id/vIsFirstEtd"
                android:src="@drawable/ic_huidian" />


            <ImageView
                android:id="@+id/imgIsDestTruckPlanTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imgIsTruckPlanTime"
                android:layout_alignStart="@+id/imgIsTruckPlanTime"
                android:layout_below="@+id/vIsFirstEta"
                android:src="@drawable/ic_huidian" />


            <ImageView
                android:id="@+id/imgIsDeliveryOver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imgIsTruckPlanTime"
                android:layout_alignStart="@+id/imgIsTruckPlanTime"
                android:layout_below="@+id/vIsDestTruckPlanTime"
                android:src="@drawable/ic_huidian" />

            <TextView
                android:id="@+id/tvIsTruckPlanTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgIsTruckPlanTime"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-4dp"
                android:layout_toEndOf="@+id/imgIsTruckPlanTime"
                android:layout_toRightOf="@+id/imgIsTruckPlanTime"
                android:text="装货派车"
                android:textSize="@dimen/order_detail_size" />

            <TextView
                android:id="@+id/tvIsLoadOverDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgIsLoadOverDate"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-4dp"
                android:layout_toEndOf="@+id/imgIsLoadOverDate"
                android:layout_toRightOf="@+id/imgIsLoadOverDate"
                android:text="装货完成"
                android:textSize="@dimen/order_detail_size" />

            <TextView
                android:id="@+id/tvIsFirstEtd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgIsFirstEtd"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-4dp"
                android:layout_toEndOf="@+id/imgIsFirstEtd"
                android:layout_toRightOf="@+id/imgIsFirstEtd"
                android:text="上船"
                android:textSize="@dimen/order_detail_size" />

            <TextView
                android:id="@+id/tvIsFirstEta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgIsFirstEta"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-4dp"
                android:layout_toEndOf="@+id/imgIsFirstEta"
                android:layout_toRightOf="@+id/imgIsFirstEta"
                android:text="船到"
                android:textSize="@dimen/order_detail_size" />

            <TextView
                android:id="@+id/tvIsDestTruckPlanTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgIsDestTruckPlanTime"
                android:layout_below="@+id/tvIsFirstEta"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-4dp"
                android:layout_toEndOf="@+id/imgIsDestTruckPlanTime"
                android:layout_toRightOf="@+id/imgIsDestTruckPlanTime"
                android:text="送货派车"
                android:textSize="@dimen/order_detail_size" />

            <TextView
                android:id="@+id/tvIsDeliveryOver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgIsDeliveryOver"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="-4dp"
                android:layout_toEndOf="@+id/imgIsDeliveryOver"
                android:layout_toRightOf="@+id/imgIsDeliveryOver"
                android:text="送货完成"
                android:textSize="@dimen/order_detail_size" />

            <TextView
                android:id="@+id/tvTruckPlanTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tvIsTruckPlanTime"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:textColor="@color/black_hint_text"
                android:textSize="@dimen/order_detail_size"
                tools:text="2017-04-03 08:25" />

            <TextView
                android:id="@+id/tvLoadOverDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tvIsLoadOverDate"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:textColor="@color/black_hint_text"
                android:textSize="@dimen/order_detail_size"
                tools:text="2017-04-03 08:25" />

            <TextView
                android:id="@+id/tvFirstEtd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tvIsFirstEtd"

                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:textColor="@color/black_hint_text"
                android:textSize="@dimen/order_detail_size"
                tools:text="2017-04-03 08:25" />

            <TextView
                android:id="@+id/tvFirstEta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tvIsFirstEta"


                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:textColor="@color/black_hint_text"
                android:textSize="@dimen/order_detail_size"
                tools:text="2017-04-03 08:25" />

            <TextView
                android:id="@+id/tvDestTruckPlanTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tvIsDestTruckPlanTime"


                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:textColor="@color/black_hint_text"
                android:textSize="@dimen/order_detail_size"
                tools:text="2017-04-03 08:25" />

            <TextView
                android:id="@+id/tvDeliveryOverDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tvIsDeliveryOver"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:textColor="@color/black_hint_text"
                android:textSize="@dimen/order_detail_size"
                tools:text="2017-04-03 08:25" />


        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>



