<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textColor="#333333"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="广州远集物流有限公司" />

        <ImageView
            android:id="@+id/imgLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_qydz_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvLocal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="6dp"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgLocal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgLocal"
            app:layout_constraintTop_toTopOf="@+id/imgLocal"
            tools:text="广州市开发道广州市开发道地址地址" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/flType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgLocal">

            <TextView
                android:id="@+id/tvType0"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_tc"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="货代"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvType1"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_tc"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="拖车"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvType2"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_tc"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="拖车"
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@+id/tvType0"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />


        </android.support.constraint.ConstraintLayout>


        <View
            android:id="@+id/vLine1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="@color/line_grey"
            app:layout_constraintTop_toBottomOf="@+id/flType" />

        <View
            android:id="@+id/vLine1H10"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#efeff4"
            app:layout_constraintTop_toBottomOf="@+id/vLine1" />

        <View
            android:id="@+id/vLine2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_grey"
            app:layout_constraintTop_toBottomOf="@+id/vLine1H10" />

        <android.support.constraint.Group
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="llMessage,vLine5,vLine5H10,vLine6" />

        <LinearLayout
            android:id="@+id/llMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/vLine1H10">

            <TextView
                android:id="@+id/tvMessage1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:textColor="#999999"
                android:textSize="14sp"
                tools:text="对方：阿萨德发射点发射点发射点发司法所大放送dad撒法撒旦发生大幅萨法撒旦发射负担" />

            <TextView
                android:id="@+id/tvMessage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:textColor="#999999"
                android:textSize="14sp"
                tools:text="对方：阿萨德发射点发射点发射点发司法所大放送dad撒法撒旦发生大幅萨法撒旦发射负担" />

            <TextView
                android:id="@+id/tvMessage3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:textColor="#999999"
                android:textSize="14sp"
                tools:text="对方：阿萨德发射点发射点发射点发司法所大放送dad撒法撒旦发生大幅萨法撒旦发射负担" />

            <TextView
                android:id="@+id/tvReply"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/background_shape_2_5"
                android:gravity="center"
                android:text="回复"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <View
            android:id="@+id/vLine5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="@color/line_grey"
            app:layout_constraintTop_toBottomOf="@+id/llMessage" />

        <View
            android:id="@+id/vLine5H10"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#efeff4"
            app:layout_constraintTop_toBottomOf="@+id/vLine5" />

        <View
            android:id="@+id/vLine6"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_grey"
            app:layout_constraintTop_toBottomOf="@+id/vLine5H10" />

        <RelativeLayout
            android:id="@+id/llName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/vLine5H10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:text="联系人"
                android:textColor="#333333"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvContactsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#999999"
                android:textSize="14sp" />


        </RelativeLayout>

        <View
            android:id="@+id/vLine3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_grey"
            app:layout_constraintTop_toBottomOf="@+id/llName" />

        <RelativeLayout
            android:id="@+id/llPhoto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/vLine3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:text="联系电话"
                android:textColor="#333333"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvContactsPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/vLineW"
                android:layout_toStartOf="@+id/vLineW"
                android:textColor="#999999"
                android:textSize="14sp" />

            <View
                android:id="@+id/vLineW"
                android:layout_width="0.5dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/imgPhoto"
                android:layout_toStartOf="@+id/imgPhoto"
                android:background="@color/line_grey" />

            <ImageView
                android:id="@+id/imgPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_telephone_yellow"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <View
            android:id="@+id/vLine4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_grey"
            app:layout_constraintTop_toBottomOf="@+id/llPhoto" />

        <TextView
            android:id="@+id/tvRemarkTitile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="17dp"
            android:text="企业简介"
            android:textColor="#333333"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vLine4"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvRemark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="17dp"
            android:hint="暂无简介"
            android:minHeight="80dp"
            android:textColor="#999999"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRemarkTitile"
            tools:ignore="HardcodedText" />


    </android.support.constraint.ConstraintLayout>


</layout>
