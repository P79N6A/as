<?xml version="1.0" encoding="utf-8"?>
<com.yaoguang.lib.common.view.CustomInsetsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/primary">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#f6f6f6"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarCommon"
            layout="@layout/toolbar_common" />

        <ImageView
            android:id="@+id/imgStep"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="@color/white"
            android:scaleType="center"
            android:src="@drawable/ic_xz_lx01" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/line_grey" />

        <include layout="@layout/layout_register_detail_step1" />

        <include layout="@layout/layout_register_detail_step2" />

        <include layout="@layout/layout_register_detail_step3" />

    </LinearLayout>

    <include layout="@layout/layout_register_tips_photo" />

</com.yaoguang.lib.common.view.CustomInsetsFrameLayout>