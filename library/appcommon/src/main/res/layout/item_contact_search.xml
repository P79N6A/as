<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/ivPhotoGraph"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_qymrtx"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/tvCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/ivPhotoGraph"
        android:layout_toRightOf="@+id/ivPhotoGraph"
        android:gravity="center"
        android:text="公司名称"
        android:textSize="@dimen/sp16"
        android:textColor="@color/black333" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:contentDescription="@string/tips_click"
        android:src="@drawable/ic_keyboard_arrow_right_grey600_24dp" />

</RelativeLayout>