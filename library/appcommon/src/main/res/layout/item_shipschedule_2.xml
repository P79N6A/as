<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlPlaceLoading"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#fdead6">

            <TextView
                android:id="@+id/tvContId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="柜型："
                android:textColor="?attr/colorPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvContValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/tvContId"
                android:layout_toRightOf="@+id/tvContId"
                android:textColor="?attr/colorPrimary"
                android:textSize="16sp"
                tools:text="40GP" />

            <TextView
                android:id="@+id/tvShipCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="4dp"
                android:gravity="end"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp"
                tools:text="中原船公司" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvVoyage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                tools:text="运单号" />

            <View
                android:id="@+id/vLine"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_below="@+id/tvVoyage"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toEndOf="@+id/tvPlaceLoading"
                android:layout_toLeftOf="@id/tvPlaceDelivery"
                android:layout_toRightOf="@+id/tvPlaceLoading"
                android:layout_toStartOf="@id/tvPlaceDelivery"
                android:background="@drawable/ic_luxian_01" />

            <TextView
                android:id="@+id/tvPlaceLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/vLine"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:ems="5"
                android:maxLines="2"
                android:textSize="14sp"
                tools:text="南沙港沙港" />

            <TextView
                android:id="@+id/tvOnboardDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/vLine"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:textColor="#666666"
                android:textSize="14sp"
                android:typeface="normal"
                tools:text="24:24\n2017-08-08" />

            <TextView
                android:id="@+id/tvVesselName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/vLine"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:textSize="14sp"
                tools:text="托运人" />

            <TextView
                android:id="@+id/tvPlaceDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/vLine"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:ems="5"
                android:gravity="end"
                android:maxLines="2"
                android:textSize="14sp"
                tools:text="大连港" />

            <TextView
                android:id="@+id/tvArrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/vLine"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:maxLines="2"
                android:textColor="#666666"
                android:textSize="14sp"
                tools:text="24:24\n2017-08-08" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvShipLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">

            <ImageView
                android:id="@+id/imgPortTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:paddingTop="4dp"
                android:src="@drawable/ic_time_jg" />

            <TextView
                android:id="@+id/tvPortTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgPortTime"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/imgPortTime"
                android:layout_toRightOf="@+id/imgPortTime"
                android:text="截港时间："
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvPortTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvPortTime"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/tvPortTime"
                android:layout_toRightOf="@+id/tvPortTime"
                tools:text="2017-05-04 10:40" />

            <ImageView
                android:id="@+id/imgCreated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgPortTime"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="14dp"
                android:paddingTop="4dp"
                android:src="@drawable/ic_time_fb" />

            <TextView
                android:id="@+id/tvCreated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgCreated"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/imgCreated"
                android:layout_toRightOf="@+id/imgCreated"
                android:text="发布时间："
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvCreatedValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tvCreated"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/tvCreated"
                android:layout_toRightOf="@+id/tvCreated"
                tools:text="2017-05-04 10:40" />

            <FrameLayout
                android:id="@+id/flDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_fy_click">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_qian_10" />

                <TextView
                    android:id="@+id/tvTotalFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginStart="22dp"
                    android:textColor="@color/white_text"
                    tools:text="1890.0" />


            </FrameLayout>


        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>



