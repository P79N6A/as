    <!-- main theme -->
    <style name="Theme.DesignDemo.Main" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowBackground">@drawable/ic_start</item>-->
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:timePickerStyle">@style/TimePickerModeSpinner</item>
        <!-- 这个到时候换一张有型的背景图 -->
        <item name="android:windowBackground">@color/window_background</item>
        <!-- toolbar本身的颜色 -->
        <item name="colorPrimary">@color/primary</item>
        <!-- toolbar菜单字体颜色 -->
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <!-- toolbar顶部状态栏的颜色 -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
        <!-- 类似文本框选择之后,5.0版本以下用的styles.xml -->
        <item name="colorControlNormal">@color/black_dividers_text</item>
        <!-- 类似文本框没选择之前 -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- MD风格所需要的,透明 -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemStyle</item>
        <!-- 按钮颜色 -->
        <item name="colorButtonNormal">@color/primary</item>
        <!-- 所有字体颜色 -->
        <!--<item name="android:textColorPrimary">@color/text_light</item>-->
        <!-- 修改所有字体. -->
        <!--<item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>-->
        <!-- Action Bar Theme -->
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <!-- 左侧顶部菜单的控件 -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- 跳转动画 -->
        <!--<item name="android:windowAnimationStyle">@style/AnimationActivity</item>-->

        <!-- 空布局异常布局等样式 -->
        <item name="styleLoadingLayout">@style/LoadingLayoutStyle</item>

    </style>

    <style name="Base.Theme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/orange900</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否悬浮在activity上 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 背景缓存颜色 -->
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="LoadingLayoutStyle" parent="LoadingLayout.Style">
        <!--<item name="llEmptyResId">@layout/_loading_layout_empty</item>-->
        <!--<item name="llErrorResId">@layout/_loading_layout_error</item>-->
        <item name="llEmptyImage">@drawable/ic_sj_k</item>
        <item name="llErrorImage">@drawable/ic_wl_k</item>
        <item name="llEmptyText">""</item>
        <item name="llErrorText">""</item>
    </style>

