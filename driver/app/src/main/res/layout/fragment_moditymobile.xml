<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_common" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:text="请先完成以下安全验证:"
        android:textColor="#333333"
        android:textSize="16sp" />

    <com.yaoguang.widget.edittext.PasswordEditText
        android:id="@+id/petPassWord"
        style="@style/hintcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:digits="@string/rule_password"
        android:drawablePadding="10dp"
        android:hint="请输入登录密码"
        android:inputType="textPassword"
        android:maxLength="12"
        android:singleLine="true"
        android:text="" />

    <TextView
        android:id="@+id/tvSubmit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_selector_primary_no_enable"
        android:clickable="true"
        android:enabled="false"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white_text" />

</LinearLayout>
